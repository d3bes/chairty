@model ClerkProfileVM
@{
    ViewData["Title"] = "cityUsers";
}

@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


<h4 style="margin: 5vw;">مدينة: @Model.clerk.city</h4>



<div class="container-fluid" style="direction: rtl;">
   <table class="table table-striped table-hover" id="exampleA">
        <thead>
            <tr> 
                <th >الاسم</th>
                <th>رقم الهوية</th>
                <th>رقم الجوال</th>
                <th>العنوان</th>
                <th>النقاط</th>
                <th>
                     <a class="btn btn-info" asp-controller="Register" asp-action="register">اضافة</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.fullName</td>
                    <td>@item.id</td>
                    <td>@item.phone</td>
                    <td>@item.fullAddress</td>
                    <td>@item.points</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Clerk" asp-action="Review" asp-route-id="@item.id">مراجعة</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="m">

</div>

@section Scripts{
    <script>
         new DataTable('#exampleA');

    </script>
}

