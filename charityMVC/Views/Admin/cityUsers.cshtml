
@model List<User>
@{
    ViewData["Title"] = "cityUsers";
}


@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}


