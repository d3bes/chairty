@model List<Clerk> 

@{
    ViewData["Title"] = "AllClerks";
}

<div class="row">
 <div class="col-sm-5"> </div>
 <div class="col-sm-4">
<div class="page-header">
<h6 style="padding-top: 0.5vw;">قائمة  المشرفين </h6>
</div>
 </div>
</div>




@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container-fluid"style="margin-bottom:20vw">
<div style="margin-bottom: 1vw;" >
  <a class="btn btn-success" asp-controller="Reports" asp-action="ClerksExel" style="margin-right: 1vw;">
           <i class="bi bi-filetype-xls" style="font-size: 2rem;"></i>
            </a> 
     <p>
        تصدير الى xlsx
    </p>
</div>
   

   <table class="table table-striped table-hover" id="examplec">
        <thead>
            <tr> 
                <th style="text-align: right;">الاسم</th>
                <th style="text-align: right;">رقم الهوية</th>
                <th style="text-align: right;">رقم الجوال</th>
                <th style="text-align: right;">المدينة</th>
               
                <th style="text-align: right;">
                     <a class="btn btn-info" asp-controller="Admin" asp-action="AddClerk">اضافة مشرف</a>
                </th>
                <th style="text-align: right;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.Id</td>  
                     <td>@item.phone</td>  
                    <td>@item.city</td>
                    
                    <td>
                        <a class="btn btn-warning" asp-controller="Clerk" asp-action="ClerkProfil" asp-route-id="@item.Id">قائمة المستفيدين </a>
                    </td>
                    
                    <td>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveClerk" asp-route-id="@item.Id">حذف</a>
                    </td>
                     <th></th>

                </tr>
            }
        </tbody>
    </table>
</div>

<div class="m">

</div>

