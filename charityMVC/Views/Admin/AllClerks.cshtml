@model List<Clerk> 

@{
    ViewData["Title"] = "AllClerks";
}

<div class="row">
 <div class="col-sm-5"> </div>
 <div class="col-sm-4">
<div class="page-header">
<h6 style="padding-top: 0.5vw;">قائمة  المشرفين </h6>
</div>
 </div>
</div>




@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container-fluid"style="margin-bottom:20vw">
   <table class="table table-striped table-hover" id="example">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>رقم الهوية</th>
                <th>رقم الجوال</th>
                <th>المدينة</th>
               
                <th>
                     <a class="btn btn-info" asp-controller="Admin" asp-action="AddClerk">اضافة مشرف</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.Id</td>  
                     <td>@item.phone</td>  
                    <td>@item.city</td>
                    @* 
                    <td>
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="Review" asp-route-id="@item.Id">تغيير المدينة</a>
                    </td>
                     *@
                    <td>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="RemoveClerk" asp-route-id="@item.Id">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="m">

</div>


  