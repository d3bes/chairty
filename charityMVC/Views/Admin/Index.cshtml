@model List<Accepted>

@{
    ViewData["Title"] = "Index";
}

@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData.ContainsKey("Success"))
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>
}



<div class="container-fluid" style="margin-top: 5vw; margin-bottom:5vw">
    <div class="row">
       
         <div class="col-sm-3">

             <ul class="nav nav-pills">
        <li class="nav-item">
            
         <a class="btn btn-success" style="width: 10vw;"   asp-controller="Admin" asp-action="AllUsers"> المستفيدين</a>

        </li>
        <li class="nav-item">
            <a class="btn btn-success" style="width: 10vw;"  asp-controller="Admin" asp-action="AllClerks"> المشرفين</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-success" style="width: 10vw;"  asp-controller="Admin" asp-action="EditPoints"> النقاط</a>
        </li>
        <li class="nav-item">
            <a class="nav-link"  href="#">Contact</a>
        </li>
    </ul>
        </div>
        <div class="col-sm-9">
            <div class="container-fluid">
            <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>رقم الهوية</th>
                            <th>رقم الجوال</th>
                            <th>العنوان</th>
                            <th>النقاط</th>
                            <th>
                                @* <a class="btn btn-info" asp-controller="Register" asp-action="register">اضافة</a> *@
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.name</td>
                                <td>@item.userId</td>
                                <td>@item.phone</td>
                                <td>@item.fullAddress</td>
                                <td>@item.points</td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="Clerk" asp-action="Review" asp-route-id="@item.userId">مراجعة</a>
                                </td>
                                  <td>
                                    <a class="btn btn-success" asp-controller="Clerk" asp-action="Review" asp-route-id="@item.userId">انشاء دفعة مالية</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>
